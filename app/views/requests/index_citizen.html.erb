<div class="container">
  <h1 class = "d-flex justify-content-center">List of Citizen Requests</h1>

  <ul class="list-group">
  <% @requests.each do |request| %>
    <li class="list-group-item" >
    <% if request.status == 'Realizada'  %>
      <i class="fas fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    <%= link_to request.instrument, request_path(request) %></li>
  <% end %>
  </ul>
  <br>
  <p><%= link_to 'Create request', new_request_path, class: "br-button" %></p>

</div>
