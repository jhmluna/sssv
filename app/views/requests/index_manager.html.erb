<div class="br-table" data-search="data-search" data-collapse="data-collapse">
  <!-- Header da Tabela -->
  <div class="table-header">
    <h1 class = "d-flex justify-content-center">Requests View</h1>

    <!-- Barra de Título -->
    <div class="top-bar">
      <!-- Título da tabela -->
      <div class="table-title">Requests List</div>
      <!-- Ativador de opções -->
      <div class="actions-trigger text-nowrap">
        <button class="br-button circle" type="button" title="Ver mais opções" data-toggle="dropdown" data-target="id-target" aria-controls="id-target" aria-expanded="false" data-visible="false">
          <i class="fas fa-ellipsis-v" aria-hidden="true"></i>
        </button>
        <div class="br-list" id="id-target" aria-hidden="true" hidden>
          <%= link_to 'Abertas', requests_path(query: "Aberta"), class: "br-item text-decoration-none" %>
          <%= link_to 'Em andamento', requests_path(query: "Em andamento"), class: "br-item text-decoration-none" %>
          <%= link_to 'Realizadas', requests_path(query: "Realizada"), class: "br-item text-decoration-none" %>
        </div>
      </div>

      <!-- Ativador de busca -->
      <div class="search-trigger">
        <button class="br-button circle" type="button" data-toggle="search" aria-label="Abrir busca">
          <i class="fas fa-search" aria-hidden="true"></i>
        </button>
      </div>
    </div>

    <!-- Barra de Busca -->
    <div class="search-bar">
      <div class="br-input">
        <label for="table-searchbox-85957">Buscar</label>
        <input id="table-searchbox-85957" type="text" placeholder="Buscar na descrição"/>
        <button class="br-button circle" type="button" aria-label="Buscar">
          <i class="fas fa-search" aria-hidden="true"></i>
        </button>
      </div>
      <button class="br-button circle inverted" type="button" data-dismiss="search" aria-label="Fechar busca">
        <i class="fas fa-times" aria-hidden="true"></i>
      </button>
    </div>

    <!-- Barra de Seleção -->
