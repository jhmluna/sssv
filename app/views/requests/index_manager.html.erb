  </div>

  <table>
    <caption>Requests</caption>
    <thead>
      <tr>
        <th scope="col">Equipment</th>
        <th scope="col">Status</th>
      </tr>
    </thead>
    <tbody>
      <% @requests.each do |request| %>
        <tr>
          <td><%= link_to request.instrument, request_path(request) %></td>
          <td><%= request.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- Rodapé da Tabela -->
  <div class="table-footer">
  <br>
  <p><%= link_to 'Back to Home', root_path, class: "br-button" %></p>
</div>

